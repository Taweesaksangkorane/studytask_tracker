rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // กฎสำหรับ users collection - แต่ละคนเข้าถึงได้เฉพาะข้อมูลตัวเอง
    match /users/{userId} {
      // อนุญาตให้อ่าน/เขียนได้เฉพาะเจ้าของ
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // กฎสำหรับ tasks subcollection
      match /tasks/{taskId} {
        // อนุญาตให้อ่าน/เขียนได้เฉพาะเจ้าของ
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
